<template name="rating">
  <view class='rating-container'>
    <view class='stars'>
      <block wx:for="{{stars}}" wx:for-item="i" wx:key="index">
        <image wx:if="{{i}}" src="/images/star.png"></image>
        <image wx:else src="/images/none-star.png"></image>
      </block>
    </view>
    <text class='score'>{{score}}</text>
    </view>
</template>
